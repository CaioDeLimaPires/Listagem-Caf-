{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "paths": {
      "@layout/atoms/*":["./src/components/layout/components/atoms/*"],
      "@ui/atoms/*":["./src/components/ui/atoms/*"],
      "@pages/initialPage/atoms*":["./src/components/pages/InitialPage/components/atoms/*"],
      "@pages/initialPage/molecules*":["./src/components/pages/InitialPage/components/molecules/*"],
      "@pages/initialPage/organisms*":["./src/components/pages/InitialPage/components/organisms/*"],
    },
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
